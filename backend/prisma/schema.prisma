generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Driver {
    id                 Int                  @id @default(autoincrement())
    name               String
    description        String
    car                String
    tax                Float
    min_km             Int
    Review             Review[]
    RaceApprovalPoints RaceApprovalPoints[]

    @@map("drivers")
}

model Review {
    id       Int    @id @default(autoincrement())
    driverId Int
    rating   Int
    comment  String
    driver   Driver @relation(fields: [driverId], references: [id])

    @@map("reviews")
}

model RaceApprovalPoints {
    id          Int    @id @default(autoincrement())
    customerId  String
    origin      String
    destination String
    distance    Float
    duration    String
    price       Float
    driverId    Int
    driver      Driver @relation(fields: [driverId], references: [id])
    createdAt   DateTime @default(now())

    @@map("race_approval_points")
}
